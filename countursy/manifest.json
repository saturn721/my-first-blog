{

  "manifest_version": 2,
  "name": "Countursy",
  "version": "0.1",

  "description": "Search countur object, face etc",
  "homepage_url": "https://github.com/saturn721/my-first-blog",
  "icons": {
    "32": "icons/face-32.png"
  },

  "applications": {
    "gecko": {
      "id": "countursy@saturn721.addons.mozilla.org",
      "strict_min_version": "48.0"
    }
  },

  "permissions": [
    "activeTab",
    "<all_urls>",
    "tabs"
  ],

  "browser_action": {
    "default_icon": "icons/face-32.png",
    "default_title": "Countursy",
    "default_popup": "popup/choose_search.html",
    "browser_style": true
},

  "content_scripts": [
      {
        "js": ["/content_scripts/tracking/build/tracking.js", "/content_scripts/tracking/build/data/face.js"],
        "matches": ["<all_urls>"],
        "match_about_blank": false,
        "all_frames": true
      }
    ]

}
